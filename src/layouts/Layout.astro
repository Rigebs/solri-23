---
const { title, description, children } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/custom.css" />
  </head>
  <body>
    <header class="header">
      <nav class="navbar">
        <ul class="nav-list">
          <li>
            <a
              href="/"
              class={`nav-link ${currentPath === "/" ? "active" : ""}`}
              >Inicio</a
            >
          </li>
          <li>
            <a
              href="/sobre-nosotros"
              class={`nav-link ${currentPath === "/sobre-nosotros" ? "active" : ""}`}
              >Sobre Nosotros</a
            >
          </li>
          <li>
            <a
              href="/gallery"
              class={`nav-link ${currentPath === "/gallery" ? "active" : ""}`}
              >Galería</a
            >
          </li>
        </ul>
      </nav>
    </header>

    <main>
      <section class="content">
        <h1>{title}</h1>
        <p>{description}</p>
        <slot />
      </section>
    </main>

    <footer class="footer">
      <p>Con todo mi amor, <strong>tu morchi</strong>. ❤️</p>
    </footer>
  </body>
</html>

<style>
  .content {
    padding: 2rem 1rem;
    text-align: center;
  }

  .nav-link.active {
    border-bottom: 2px solid #ffcdb2;
    padding-bottom: 0.2rem;
  }
</style>
